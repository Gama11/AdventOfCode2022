{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "hxml",
			"file": "build.hxml",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"type": "shell",
			"label": "Generate Next Day",
			"command": [
				"npx",
				"haxe",
				"--run",
				"NextDay"
			],
			"problemMatcher": [
				"$haxe"
			]
		}
	]
}